<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="74dp"
            android:text="Login:"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="38sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailET1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <EditText
                android:id="@+id/emailET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="e-mail"
                android:text="ania@wp.pl"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordET1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailET1"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/passwordET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="password"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:text="00000000" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/loginBT"
            android:layout_width="126dp"
            android:layout_height="54dp"
            android:layout_marginTop="48dp"
            android:backgroundTint="@color/black"
            android:text="Sign in"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordET1" />

        <Button
            android:id="@+id/stefan"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginTop="140dp"
            android:backgroundTint="@color/black"
            android:text="stefan"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forgotPasswordButton" />

        <Button
            android:id="@+id/forgotPasswordButton"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginTop="9dp"
            android:background="@android:color/transparent"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:text="Do you forgot password?"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginBT" />

        <Button
            android:id="@+id/registerBT"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginTop="9dp"
            android:background="@android:color/transparent"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:text="Do you want to join to ChatJet community?"
            android:textAllCaps="false"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forgotPasswordButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
